
# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = crlf
files.encoding = "utf8"
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.yml, *.yaml, *.json]
indent_size = 2
indent_style = space

[*.js]
indent_size = 4
indent_style = tab
